@model Player

<style>
    h1 {
        color: #a50034;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
    }
</style>

<h1>Delete player</h1>

<h3>@Model.FirstName @Model.LastName</h3>
<p>@Model.Position</p>

<form asp-controller="Player" asp-action="ConfirmDelete" asp-route-id="@Model.Id" method="post">
    <button type="submit" onclick="return confirm('Are you sure you want to delete this player?')" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>